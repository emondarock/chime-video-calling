  "item": [
    {
      "name": "Create Meeting",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.Meeting && jsonData.Meeting.MeetingId) {",
              "        pm.environment.set(\"meetingId\", jsonData.Meeting.MeetingId);",
              "        console.log(\"Meeting ID saved: \" + jsonData.Meeting.MeetingId);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{baseUrl}}/create-meeting",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "create-meeting"
          ]
        },
        "description": "Create a new Chime SDK meeting"
      },
      "response": []
    },
